        <Label Content="Итого:" HorizontalAlignment="Left" Margin="40,382,0,0" VerticalAlignment="Top"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,40,10,52">
            <ListView.View>
